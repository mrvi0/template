# Конфигурация приложения
# Скопируйте этот файл в .env и заполните своими значениями

# Основные настройки
APP_NAME=YourAppName
APP_VERSION=0.1.0
DEBUG=true
LOG_LEVEL=INFO

# Порт приложения (если это веб-сервис)
APP_PORT=8000

# База данных (если используется)
DATABASE_URL=postgresql://user:password@localhost:5432/dbname
# Или для SQLite:
# DATABASE_URL=sqlite:///./app.db

# Redis (если используется)
REDIS_URL=redis://localhost:6379/0

# Telegram Bot (если это Telegram бот)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_WEBHOOK_URL=https://your-domain.com/webhook

# API ключи (если используются внешние API)
API_KEY=your_api_key_here
API_SECRET=your_api_secret_here

# JWT токены (если используется аутентификация)
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Email настройки (если используется отправка email)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here

# Файловое хранилище (если используется)
STORAGE_PATH=./storage
MAX_FILE_SIZE=10485760  # 10MB в байтах

# Мониторинг и логирование
SENTRY_DSN=your_sentry_dsn_here
LOG_FILE_PATH=./logs/app.log

# Тестовые настройки (для тестов)
TEST_DATABASE_URL=sqlite:///./test.db
TEST_API_KEY=test_api_key 